<!doctype html>
<html lang="en">
  <head>
    <%- include("../partials/header") %>
      <title>Login</title>
  </head>
  <body>
    <section id="booking-session-options" class="w-[100dvw] flex justify-center py-20">
        <form id="form" class="border-1 rounded shadow-md p-4 min-w-72" method="post">
            <h2 class="text-3xl text-center">Sign In</h2>
            <span class="text-red-500" id="error-message"></span>
            <div class="flex gap-4 flex-col">
              <div class="flex flex-col w-full">
                <label for="email">Email</label>
                <input class="w-full border-2 border-gray-700 rounded-md p-1" type="email" name="email" id="email" placeholder="Your Email..."/>
              </div>

              <div class="flex flex-col w-full">
                <label for="Password">Password</label>
                <input class="w-full border-2 border-gray-700 rounded-md p-1" type="password" name="password" id="password" placeholder="Your Password..."/>
              </div>
              <button type="submit" class="px-4 py-2 rounded-sm bg-blue-700 w-full hover:bg-blue-500 font-bold text-white">Login</button>
          </div>
        </form>
    </section>
  </body>

  <script>
    const form = document.getElementById("form")
    const errorBlock = document.getElementById("error-message")
    form.addEventListener("submit", async(e) =>{
      e.preventDefault()
      const email = document.getElementById("email")
      const password = document.getElementById("password")  
      try {
        const res = await fetch("http://localhost:8080/api/login", 
          {
            method:"POST",
            headers:{
              "Content-Type":"application/json"
            }, 
            body:JSON.stringify({
              email: email.value,
              password: password.value
            })
          }
        )
        const data = await res.json()
        if(data.error){ 
          email.style.borderColor = "red"    
          password.style.borderColor = "red"      
          throw data.error
        }

        window.location.href = "/dashboard"
      } catch (error) {
        errorBlock.innerText = "Invalid Credentials"
      }
    })
  </script>
</html>
